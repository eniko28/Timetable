<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Create Wishlist</title>
    <link rel="stylesheet" href="teacherStyle.css">
    <script src="newWishlistValidation.js" defer></script>
</head>

<body>
    <div>
        <h1>Create a wishlist!</h1>
        <form id="addWishlists" action="/addWishlists" method="POST" enctype="multipart/form-data">

            <label for="teacherCode">Teacher Id:</label>
            <select id="teacherCode" name="teacherCode">
                <option value="<%= id %>">
                    <%= id %>
                </option>
            </select><br>

            <label for="subjectCode">Subject Id:</label>
            <select id="subjectCode" name="subjectCode">
                <option value="">Choose...</option>
                <% if (subjects && subjects[0] && subjects[0].subjectId) { %>
                    <% subjects[0].subjectId.forEach(function(subject) { %>
                        <option value="<%= subject %>">
                            <%= subject %>
                        </option>
                        <% }); %>
                            <% } %>
            </select><br>
            <span class="error-message" id="startError"></span><br>

            <label for="groupCode">Group Id:</label>
            <select id="groupCode" name="groupCode"></select><br>
            <span class="error-message" id="startError"></span><br>


            <label for="day">Day:</label>
            <select name="day">
                <option value="Monday">Monday</option>
                <option value="Tuesday">Tuesday</option>
                <option value="Wednesday">Wednesday</option>
                <option value="Thursday">Thursday</option>
                <option value="Friday">Friday</option>
            </select><br>

            <label for="start">Start:</label>
            <input type="text" name="start" placeholder="HH:mm">
            <span class="error-message" id="startError"></span><br>

            <label for="end">End:</label>
            <input type="text" name="end" placeholder="HH:mm">
            <span class="error-message" id="endError"></span><br>

            <input class="submit-button" type="submit" value="Send">
        </form>
    </div>
    <a href="/teacher" class="back-button">Back</a>
</body>

</html>