<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Assign groups to subjects</title>
    <link rel="stylesheet" href="style/adminStyle.css">
    <script src="/validation/classtypes.js" defer></script>
</head>

<body>
    <div>
        <h1>Assign groups to subjects!</h1>
        <form id="assignGroup" action="/assignGroup" method="POST" enctype="multipart/form-data">

            <label for="groupCode">Group:</label>
            <select id="groupCode" name="groupCode">
                <option value="">Choose...</option>
                <% groups.forEach(function(item) { %>
                    <option value="<%= item.id %>">
                        <%= item.id %>
                    </option>
                    <% }); %>
            </select> <br>
            <span class="error-message" id="groupIdError"></span><br>

            <label for="subjectCode">Subject:</label>
            <select id="subjectCode" name="subjectCode">
                <option value="">Choose...</option>
                <% subjects.forEach(function(item) { %>
                    <option value="<%= item.id %>">
                        <%= item.name %> - <%= item.type %>
                    </option>
                    <% }); %>
            </select> <br>
            <span class="error-message" id="subjectIdError"></span><br>

            <input class="submit-button" type="submit" value="Assign teacher">
        </form>
    </div>
    <a href="/admin" class="back-button">Back</a>
    <script src="/validation/assignGroupValidation.js"></script>

</body>

</html>