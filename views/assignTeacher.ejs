<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <title>Assign teachers to subjects</title>
    <link rel="stylesheet" href="style/adminStyle.css">
</head>

<body>
    <div>
        <h1>Assign teachers to subjects!</h1>
        <form id="assignTeacher" action="/assignTeacher" method="POST" enctype="multipart/form-data">
            <label for="teacherCode">Teacher Id:</label>
            <select id="teacherCode" name="teacherCode">
                <option value="">Choose...</option>
                <% teachers.forEach(function(item) { %>
                    <option value="<%= item.id %>">
                        <%= item.id %>
                    </option>
                    <% }); %>
            </select> <br>
            <span class="error-message" id="teacherIdError"></span><br>

            <label for="subjectCode">Subject:</label>
            <select id="subjectCode" name="subjectCode">
                <option value="">Choose...</option>

                <% subjects.forEach(function(item) { %>
                    <option value="<%= item.id %>">
                        <%= item.name %> -
                            <%= item.type %>
                    </option>
                    <% }); %>
            </select> <br>
            <span class="error-message" id="subjectIdError"></span><br>
            <input class="submit-button" type="submit" value="Assign teacher">
        </form>
    </div>
    <a href="/admin" class="back-button">Back</a>
    <script src="/validation/assignTeacherValidation.js"></script>
</body>

</html>